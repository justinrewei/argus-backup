<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eaffff"
    android:orientation="vertical"
    tools:context="com.justinwei.auijustin.ImageActivity">

    <com.justinwei.auijustin.DrawView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"

        android:id="@+id/capturedPhoto" />

    <Button
        android:id="@+id/btnFinetune"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#003d99"
        android:text="Finetune"
        android:textColor="#ffad33"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnIdentifyObjects"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:backgroundTint="#003d99"
        android:text="Identify Objects"
        android:textColor="#ffad33"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnFinetune"
        android:layout_toStartOf="@+id/btnFinetune" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boundingBox"
        android:background="#8000FF7F"
         />

</RelativeLayout>
